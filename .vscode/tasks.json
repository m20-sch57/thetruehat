{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "server",
            "type": "shell",
            "command": "node ${workspaceFolder}/server.js",
        },
        {
            "label": "feedback server",
            "type": "shell",
            "command": "node ${workspaceFolder}/feedbackServer.js"
        },
        {
            "label": "caddy",
            "type": "shell",
            "command": "caddy -conf=${workspaceFolder}/caddy/Caddyfile -pidfile=${workspaceFolder}/caddy/caddy.pid"
        },
        {
            "label": "npm build",
            "type": "shell",
            "command": "npm run build"
        },
        {
            "label": "all",
            "type": "shell",
            "dependsOn": ["server", "feedback server", "caddy", "npm build"]
        }
    ]
}